NUMERO E SEU ANTECESSOR E SUCESSOR

package main

import "fmt"

func main() {
	var numero float64
	fmt.Print("Escreva um número de sua escolha:", numero)
	fmt.Scan(&numero)
	ant := (numero - 1)
	suc := (numero + 1)
	fmt.Println(" O antecessor é:", ant, "o seu sucessor é", suc, "Em caso de dúvida apenas some ou sobtraia 1 unidade")

}
